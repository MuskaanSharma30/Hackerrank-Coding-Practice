
#include <iostream>

using namespace std;

int main()
{
  int n;
  int e;
  cin>>n>>e;
  int monsters[n],duplicateMonsters[n],bonus[n],duplicateBonus[n],count=0;
  for( int i=0;i<n;i++)
  {
    cin>>monsters[i];
    duplicateMonsters[i]=monsters[i];
  }
  for(int i=0;i<n;i++)
    {
    cin>>bonus[i];
    duplicateBonus[i]=bonus[i];
    }
    

for(int i=0;i<n;i++)
{
    for(int j=0;j<n-1;j++)
    {
        if(monsters[j]>monsters[j+1])
        {
            int temp=monsters[j];
            monsters[j]=monsters[j+1];
            monsters[j+1]=temp;
        }
    }
}
for(int i=0;i<n;i++)
{
    for(int j=0;j<n;j++)
    {
        if(monsters[i]==duplicateMonsters[j])
        {
            bonus[i]=duplicateBonus[j];
        }
    }
}

for(int i=0;i<n;i++)
{
    if(e>=monsters[i])
    {
        e+=bonus[i];
        count++;
    }
}
cout<<count;
    
    
}
